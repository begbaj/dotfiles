[colors.normal]
black = "0x282a2e"
blue = "0x5f819d"
cyan = "0x5e8d87"
green = "0x8c9440"
magenta = "0x85678f"
red = "0xa54242"
white = "0x707880"
yellow = "0xde935f"

[colors.primary]
background = "0x1d1f21"
foreground = "0xc5c8c6"

[colors.vi_mode_cursor]
cursor = "0x88f9f9"
text = "0x000000"

[cursor.style]
blinking = "always"
shape = "block"

[env]
EDITOR = "nvim"
TERM = "alacritty"

[font.bold]
style = "Bold"

[font.italic]
style = "Italic"

[font]
size = {{- if hasKey . "alacritty_size" }} {{ .alacritty_size }} {{- else}} 10 {{- end}}

[[keyboard.bindings]]
action = "ToggleViMode"
key = "Escape"
mode = "~Search"
mods = "Alt"

[scrolling]
history = 100000

[terminal.shell]
args = ["--login"]
program = "/bin/zsh"

[window]
decorations = "full"
dynamic_title = true
opacity = 0.97
startup_mode = "Windowed"
